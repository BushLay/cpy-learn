<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bushlay.demo.mapper.UserMapper">
    <!-- 查询全部数据 -->
    <select id="getAll" resultType="com.bushlay.demo.entity.User">
        SELECT * FROM user
    </select>

    <!-- 插入数据 -->
    <insert id="save" parameterType="com.bushlay.demo.entity.User">
        INSERT INTO user (name, age) VALUES (#{name}, #{age})
    </insert>

    <!-- 根据id查询数据 -->
    <select id="findById" parameterType="int" resultType="com.bushlay.demo.entity.User">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <!-- 根据id删除数据 -->
    <delete id="delete" parameterType="int">
        DELETE FROM user WHERE id = #{id}
    </delete>

    <!-- 更新数据 -->
    <update id="update" parameterType="com.bushlay.demo.entity.User">
        UPDATE user SET name = #{name}, age = #{age} WHERE id = #{id}
    </update>

<!--    建表-->
    <update id="createTable" parameterType="string">
        CREATE TABLE `${name}`
        (
            id INT(5) NULL COMMENT 'user_id',
            name VARCHAR(10) NULL COMMENT 'user_name',
            depId VARCHAR(10) NULL COMMENT 'user_department',
            salary DOUBLE(7,1) NULL COMMENT 'user_salary'
        )
    </update>

</mapper>